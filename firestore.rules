
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public write access to flyCounts collection for the photo-analysis endpoint
    match /flyCounts/{flyCountId} {
      allow read, write: if true;
    }

    // Secure other collections, requiring authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
